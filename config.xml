<?xml version='1.1' encoding='utf-8'?>
<widget id="nl.atkoinc.shop" version="1.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>FullBlue</name>
    <description>
        This application demonstrates a real-life optimization for reducing end user friction in retail. It uses Okta redacted access tokens. 
    </description>
    <author email="benusfrank@gmail.com" href="https://github.com/frenkel34/atkoshop/tree/shop">
        Frank Benus
    </author>
    <icon src="icon.png" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <universal-links>
        <ios-team-id value="2683YDGHXN" />
        <host name="www.atkoinc.nl">
            <path url="/callback" scheme="https" event="ul_callBack"/>
            <path url="/app"  scheme="https" event="ul_openApp"/>
            <path url="/renew" scheme="https" event="ul_fullaccess"/>
        </host>
    </universal-links>
</widget>

